{
  _id: ObjectId,
  title: String,
  slug: String,
  content: String,
  summary: String,
  category: {
    type: String,
    enum: ['finance_market', 'national_budget', 'bank_projects', 'statistics']
  },
  sector: {
    type: String,
    enum: ['banking', 'insurance', 'investment', 'government', 'all']
  },
  author: { type: ObjectId, ref: 'User' },
  priority: {
    type: String,
    enum: ['low', 'medium', 'high']
  },
  financialIndicators: [String],
  featuredImage: String,
  reports: [String],
  status: {
    type: String,
    enum: ['draft', 'published', 'scheduled'],
    default: 'draft'
  },
  featured: Boolean,
  tags: [String],
  views: Number,
  scheduleDate: Date,
  createdAt: Date,
  updatedAt: Date
}